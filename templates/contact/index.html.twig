{% extends 'Layouts/base.html.twig' %}
{% block body %}
<!-- Hero Area Start-->
    <div class="slider-area ">
        <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="assets/img/hero/about.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Contact-Nous</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- Hero Area End -->
    <!-- ================ contact section start ================= -->
    <section class="contact-section">
            <div class="container">
                
    
                <div class="row">
                    <div class="col-12">
                        <h2 class="contact-title">Entrez en Contact avec Nous</h2>
                    </div>
                    <div class="col-lg-8">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Message</label>
                                       {{ form_widget(form.message, {'attr': {'class': 'form-control '}}) }}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Nom</label>
                                        {{ form_widget(form.firsName, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Sujet</label>
                                        {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <button class="btn head-btn2" style="border-radius: 5px;">{{ button_label|default('Envoyer') }}</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                    <div class="col-lg-3 offset-lg-1">
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-home"></i></span>
                            <div class="media-body">
                                <h3>Tunis, Tunisie.</h3>
                                <p>Cité Ettahrir, 2042</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                            <div class="media-body">
                                <h3>+126 92 91 86 10</h3>
                                <p> Du Lundi au Venderdi 9h à 18h</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-email"></i></span>
                            <div class="media-body">
                                <h3>jobFinder@gmail.com</h3>
                                <p>Contactez-Nous à tout moment!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
    
        
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('ckeditor5-build-classic/ckeditor.js') }}"></script>
    <script src="{{ asset('assets/js/ckeditor.js') }}"></script>
{% endblock %}