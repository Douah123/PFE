{% extends 'Layouts/base2.html.twig' %}


{% block body %}
<div class="indexjob " style="font-size: small;">
 <title>Job index</title>

  <h1>Job index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Description</th>
                <th>Emplacement</th>
                <th>Salaire</th>
                <th>Logo</th> 
                <th>Créé à</th>
                <th>Modifié à</th>
                <th>Expire à</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.title }}</td>
                <td>{{ job.type }}</td>
                <td>{{ job.description|slice(0,10) }}...</td>
                <td>{{ job.location }}</td>
                <td>{{ job.salary }}</td>
                <td>{{ job.imageName|slice(0,5) }}</td>
                <td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.updatedAt ? job.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.expiresAt ? job.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_job_show', {'id': job.id}) }}"><button class="btn btn-sm" style=" padding: 20px 20px; border-radius: 5px;">Consulter</button></a><br><br>
                    <a href="{{ path('app_job_edit', {'id': job.id}) }}"><button class="btn head-btn2" style=" padding: 20px 20px; border-radius: 5px;">Modifier</button ></a><br>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Vous n'avez posté aucune offre</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_new') }}"><button class="btn" style="border-radius: 5px;">Ajouter une offre</button</a>
</div>      

{% endblock %}
