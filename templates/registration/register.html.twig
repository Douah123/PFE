{% extends 'Layouts/base.html.twig' %}
{% block body%}
  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    
</head>
<body>
    {% block navbar %}{% endblock %}

   
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
<div class="register-box">
    <div class="register-form">
        <div class="container">
            <h2>Veuillez-vous Inscrire</h2>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-small'}}) }} 
                {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control form-control-small'}}) }}
                {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control form-control-small'}}) }}
                {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control form-control-small'}}) }}
                
                {{ form_row(registrationForm.agreeTerms) }}
                <br>

                <button type="submit" class="btn btn-block" style="border-radius: 5px;">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>    

   <br><br> 
</body>

</html>
{% endblock %}