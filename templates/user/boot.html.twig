{% extends 'Layouts/base.html.twig' %}



{% block body %}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">{{ user.firstName }}</span><span class="text-black-50">{{ user.email }}</span><span> </span></div>
        </div>
        <div class="col-md-6 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                {{ form_start(form) }}
                <div class="row mt-3">
                    <label>Firstname </label>
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control col-md-12'}}) }}
                    <label>Lastname</label>
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control col-md-12'}}) }}
                
                
                   <label>Email </label>
                   {{ form_widget(form.email, {'attr': {'class': 'form-control col-md-12'}}) }}
                    <label>Adress </label>
                   {{ form_widget(form.Adress, {'attr': {'class': 'form-control col-md-12'}}) }}
                    <label>Phone Number </label>
                   {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control col-md-12'}}) }}
                   
                    
                
                    <label>Country</label>
                   {{ form_widget(form.Country, {'attr': {'class': 'form-control col-md-12'}}) }}
                    <label>Region</label>
                   {{ form_widget(form.Region, {'attr': {'class': 'form-control col-md-12'}}) }}
                
                    <label>Veuillez entrer votre mot de passe </label>
                   {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control  col-md-12'}}) }}
                </div>
                
                
                   {{ form_widget(form.submit, {'attr': {'class': 'form-control btn btn-block mt-5 text-center', 'style': 'border-radius: 5px;'}}) }}
                
            </div>
            {{ form_end(form) }}
        </div>
       
    </div>
</div>
</div>
</div>
{% endblock %}
